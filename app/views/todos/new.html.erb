<h1>New Todo</h1>

<%= form_with model: @todo, local: true do |form| %>
  <div>
    <%= form.label :task %>
    <%= form.text_field :task %>
  </div>

  <div>
    <%= form.label :done %>
    <%= form.check_box :done %>
  </div>

  <div>
    <%= form.submit "Create Todo" %>
  </div>
<% end %>

<%= link_to 'Back', todos_path %>
