<h1>Todo List</h1>

<%= link_to 'New Todo', new_todo_path, class: 'btn btn-primary' %>

<ul>
    <% @todos.each do |todo| %>
<li>
    <%= todo.task %> - <%= todo.done ? "Done" : "Not Done" %>
    <%= link_to 'Edit', edit_todo_path(todo) %> |
    <%= link_to 'Delete', todo, method: :delete, data: { confirm: 'Are you sure?' } %>
</li>
    <% end %>
</ul>